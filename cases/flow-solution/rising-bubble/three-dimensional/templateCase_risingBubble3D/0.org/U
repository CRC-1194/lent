FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
    defaultFaces
    {    type empty;
    }
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    mantle
    {
        // Eulerian (inertial) reference frame.
        type            slip;
        
        // Arbitrary Lagrangian / Eulerian -Relative Reference Frame (RRF
        //type            zeroGradient;
    }
    top
    {
        type            zeroGradient;
    }
    bottom
    {
        // Eulerian (inertial) reference frame.
        type            fixedValue;
        value           uniform (0 0 0);
        
        // Arbitrary Lagrangian / Eulerian -Relative Reference Frame (RRF
        //type            zeroGradient;
    }
}


